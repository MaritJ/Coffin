<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="coffinn.maritjaspers.odisee.be.coffinn.location"
    tools:showIn="@layout/activity_location">


    //Header
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#393233"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="CoffInn"
            android:id="@+id/myFont"
            android:textColor="#fff"
            android:textSize="60dp"
            android:paddingTop="5dp"
            />

    </RelativeLayout>


    //Footer
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorButtonNormal"
        android:gravity="center"
        android:animationCache="false"
        android:animateLayoutChanges="false"
        android:alwaysDrawnWithCache="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="(c) Coffin 2016"
            android:textColor="#000"
            android:textSize="20sp"
            />

    </RelativeLayout>


    //Content
    <RelativeLayout
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:text="At Coffinn&#10;Enjoy your teste here with us."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AtCoffinn_Button"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            style="@style/Widget.AppCompat.Button"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            android:onClick="sendToCoffinn"
            android:background="@drawable/button_border"
            android:layout_below="@+id/Tekst"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Take Away"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TakeAway_Button"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/button_border"
            android:textAllCaps="false"
            android:onClick="sendToTakeAway"
            android:layout_below="@+id/AtCoffinn_Button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Where do you want to enjoy?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tekst"
            android:padding="5dp"
            android:textColor="#393233"
            android:layout_marginTop="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:padding="15dp"
            android:id="@+id/btn_pijltje2"
            android:background="@drawable/test"
            android:elevation="5dp"
            android:rotation="-90"
            android:layout_alignBottom="@+id/TakeAway_Button"
            android:layout_alignLeft="@+id/btn_pijltje1"
            android:layout_alignStart="@+id/btn_pijltje1"
            android:layout_marginBottom="23dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/takeaway"
            android:id="@+id/takeaway"
            android:foreground="@+id/TakeAway_Button"
            android:elevation="24dp"
            android:layout_alignBottom="@+id/btn_pijltje2"
            android:layout_alignLeft="@+id/atcoffinn"
            android:layout_alignStart="@+id/atcoffinn" />

        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:padding="15dp"
            android:id="@+id/btn_pijltje1"
            android:background="@drawable/test"
            android:elevation="5dp"
            android:rotation="-90"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp"
            android:layout_alignTop="@+id/atcoffinn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/atcoffinn"
            android:id="@+id/atcoffinn"
            android:foreground="@+id/AtCoffinn_Button"
            android:elevation="24dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/Tekst"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp" />


    </RelativeLayout>


</RelativeLayout>
