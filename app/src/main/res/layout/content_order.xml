<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="coffinn.maritjaspers.odisee.be.coffinn.order"
    tools:showIn="@layout/activity_order">

    //Header
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#393233"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="CoffInn"
            android:id="@+id/myFont"
            android:textColor="#fff"
            android:textSize="60dp"
            android:paddingTop="5dp"
            />

    </RelativeLayout>

    //Footer
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorButtonNormal"
        android:gravity="center"
        android:animationCache="false"
        android:animateLayoutChanges="false"
        android:alwaysDrawnWithCache="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="(c) Coffin 2016"
            android:textColor="#000"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <!-- Content met scroll -->
    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    <TextView
        android:text="What would you like to order?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Tekst"
        android:padding="5dp"
        android:textColor="#393233"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Elke button moet in een framelayout anders gaan de afbeeldingen er niet in -->
    <!-- Als je dit niet gebruikt dan is alles onder elkaar -->
    <!-- Eerste button: Coffee -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:text="Coffee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Coffee_Button"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            style="@style/Widget.AppCompat.Button"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            android:background="@drawable/button_border"
            android:layout_below="@+id/Tekst"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="sendToCoffee"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/coffee"
            android:id="@+id/coffee"
            android:foreground="@+id/Coffee_Button"
            android:elevation="24dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/Tekst"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:padding="15dp"
            android:id="@+id/btn_pijltje1"
            android:background="@drawable/test"
            android:elevation="5dp"
            android:rotation="-90"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/coffee"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </FrameLayout>

    <!-- Tweede button: Cookie -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Cookie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Cookie_Button"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/button_border"
            android:textAllCaps="false"
            android:onClick="sendToCookie"
            android:layout_below="@+id/Coffee_Button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/cookie"
            android:id="@+id/cookie"
            android:foreground="@+id/Cookie_Button"
            android:elevation="24dp"
            android:layout_alignBottom="@+id/btn_pijltje2"
            android:layout_alignLeft="@+id/coffee"
            android:layout_alignStart="@+id/coffee"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:padding="15dp"
            android:id="@+id/btn_pijltje2"
            android:background="@drawable/test"
            android:elevation="5dp"
            android:rotation="-90"
            android:layout_above="@+id/Milkshake_Button"
            android:layout_alignLeft="@+id/btn_pijltje1"
            android:layout_alignStart="@+id/btn_pijltje1"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            />

    </FrameLayout>

    <!-- Derde button: Milkshake -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:text="Milkshake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Milkshake_Button"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/button_border"
            android:textAllCaps="false"
            android:onClick="sendToMilkshake"
            android:layout_below="@+id/Cookie_Button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"  />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/milk"
            android:id="@+id/milkshake"
            android:foreground="@+id/Milkshake_Button_Button"
            android:elevation="24dp"
            android:layout_below="@+id/Cookie_Button"
            android:layout_alignLeft="@+id/cookie"
            android:layout_alignStart="@+id/cookie"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:padding="15dp"
            android:id="@+id/btn_pijltje3"
            android:background="@drawable/test"
            android:elevation="5dp"
            android:rotation="-90"
            android:layout_alignTop="@+id/milkshake"
            android:layout_alignLeft="@+id/btn_pijltje2"
            android:layout_alignStart="@+id/btn_pijltje2"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"/>

    </FrameLayout>

    <!-- Vierde button: Tea -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Tea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tea_Button"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/button_border"
            android:textAllCaps="false"
            android:onClick="sendToTea"
            android:layout_below="@+id/Milkshake_Button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:padding="15dp"
            android:id="@+id/btn_pijltje4"
            android:background="@drawable/test"
            android:elevation="5dp"
            android:rotation="-90"
            android:layout_alignBottom="@+id/Tea_Button"
            android:layout_alignLeft="@+id/btn_pijltje3"
            android:layout_alignStart="@+id/btn_pijltje3"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/tea"
            android:id="@+id/tea"
            android:foreground="@+id/Milkshake_Button_Button"
            android:elevation="24dp"
            android:layout_alignBottom="@+id/btn_pijltje4"
            android:layout_alignLeft="@+id/milkshake"
            android:layout_alignStart="@+id/milkshake"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"
            />

    </FrameLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
